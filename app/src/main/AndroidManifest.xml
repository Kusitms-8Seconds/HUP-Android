<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.auctionapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".domain.user.presenter.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/hup_icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/hup_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AuctionApp"
        android:usesCleartextTraffic="true">
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/hup_icon" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/Hup" />
        <activity android:name=".domain.item.view.QnA"></activity>
        <activity
            android:name=".domain.home.view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".domain.user.view.SignUp" />
        <activity android:name=".domain.user.view.Login" />
        <activity android:name=".domain.item.view.ItemDetail" />
        <activity android:name=".domain.pricesuggestion.view.BidPage" />
        <activity android:name=".domain.upload.view.UploadPage" />
        <activity android:name=".domain.item.view.Search" />
        <activity android:name=".domain.item.view.AuctionHistory" />
        <activity android:name=".domain.item.view.SellHistory" />
        <activity android:name=".domain.mypage.notice.view.Notice" />
        <activity android:name=".domain.mypage.notice.view.NoticeDetail" />
        <activity android:name=".domain.mypage.notice.view.UploadNotice" />
        <activity android:name=".domain.mypage.notice.view.UpdateNotice" />
        <activity android:name=".domain.scrap.view.Scrap" />
        <activity android:name=".domain.item.view.Interests" />
        <activity android:name=".domain.chat.view.ChatRoom" />
        <activity android:name=".domain.pricesuggestion.view.FeesPage" />
        <activity android:name=".domain.pricesuggestion.view.GoChat"/>
        <activity android:name=".domain.item.view.EditQnA" />
        <activity android:name=".domain.email.view.Email"/>
        <activity android:name=".domain.user.view.ChangeInfo"/>
        <activity android:name=".domain.user.view.MyInfo"/>


        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />
<!--        <meta-data-->
<!--            android:name="com.google.firebase.messaging.default_notification_icon"-->
<!--            android:resource="@mipmap/hup_icon_foreground" />-->
<!--        <meta-data-->
<!--            android:name="com.google.firebase.messaging.default_notification_color"-->
<!--            android:resource="@color/white" />-->

        <activity android:name=".MainActivity" android:launchMode="singleTop" />
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Redirect URI: "kakao{NATIVE_APP_KEY}://oauth" -->
                <data
                    android:host="oauth"
                    android:scheme="6605274d9a8165288410480f4bd1fa9b" />
            </intent-filter>
        </activity>
        <service android:name=".global.firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>