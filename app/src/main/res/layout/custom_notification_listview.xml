<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40px">

    <ImageView
        android:id="@+id/noti_icon"
        android:layout_width="150px"
        android:layout_height="150px"
        android:src="@drawable/hupiconbluue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/noti_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="noti_message"
        android:textSize="35px"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="48px"
        android:layout_marginTop="20px"
        app:layout_constraintStart_toEndOf="@id/noti_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/noti_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category"
        android:textSize="30px"
        android:layout_marginStart="48px"
        android:layout_marginTop="15px"
        app:layout_constraintStart_toEndOf="@id/noti_icon"
        app:layout_constraintTop_toBottomOf="@id/noti_message"/>


</androidx.constraintlayout.widget.ConstraintLayout>