<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="72px">

    <ImageView
        android:id="@+id/iv_chatlist_itemImage"
        android:layout_width="150px"
        android:layout_height="150px"
        android:src="@drawable/box_edge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_chatlist_profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="profile_name"
        android:textSize="40px"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="48px"
        app:layout_constraintStart_toEndOf="@id/iv_chatlist_itemImage"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_chatlist_lastChatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="last_chatTime"
        android:textSize="36px"
        android:layout_marginStart="20px"
        app:layout_constraintStart_toEndOf="@id/tv_chatlist_profileName"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_chatlist_lastChat"
        android:layout_width="607px"
        android:layout_height="wrap_content"
        android:text="last_chat"
        android:textSize="36px"
        android:layout_marginStart="48px"
        android:textColor="#000000"
        android:minLines="1"
        app:layout_constraintStart_toEndOf="@id/iv_chatlist_itemImage"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>